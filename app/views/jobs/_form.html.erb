<%= form_for @job do |f| %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :title) %>
  <%= link_to 'Add a new category', new_category_path %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.collection_select(:company_id, Company.all, :id, :name) %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.select :level_of_interest, [['1 of 5',1], ['2 of 5',2], ['3 of 5',3], ['4 of 5',4], ['5 of 5',5]] %>

  <%= f.submit %>
<% end %>
