<%= form_for @job do |f| %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :title) %>
  <%= link_to 'Add a new category', new_category_path %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.collection_select(:company_id, Company.all, :id, :name) %>

  <%= f.label :description %>
  <%= f.text_field :description %>


  <%= f.submit %>
<% end %>
